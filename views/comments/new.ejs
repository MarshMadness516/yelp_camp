<% include ../partials/header %>

<div class="container">
    <div class="row">

        <h1 style="text-align: center">Add new comment to <%= campground.name %></h1>
        
        <div style="width: 30%; margin: 20px auto;">
        
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <!-- setting name equal to an object stores a premade object
                        called 'comment' inside req.body; can reference data from
                        form with req.body.comment.text or .author-->
                    <input class="form-control" type="text" placeholder="text" name="comment[text]" required>
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit">
                </div>
            </form>
            
            <a href="/campgrounds">Return to campgrounds</a>
        
        </div>
        
        
        
    </div>
</div>

<% include ../partials/footer %>