<% include ../partials/header %>

<div class="container">
    <div class="row">

        <h1 style="text-align: center;">Create a new campground</h1>
        
        <div style="width: 30%; margin: 20px auto;">
        
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="name" name="name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image URL" name="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="campsite description" name="description">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit">
                </div>
            </form>
            
            <a href="/campgrounds">Return to campgrounds</a>
        
        </div>
        
        
        
    </div>
</div>

<% include ../partials/footer %>