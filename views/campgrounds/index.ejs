<% include ../partials/header.ejs %>

<div class="container">
    <!-- header tag functions like a div but with more semantic meaning -->
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world!</p>
            
            <p><a class="btn btn-primary bt-lg" href="/">Return home</a></p>
            <p><a class="btn btn-primary bt-lg" href="/campgrounds/new">Add new campground</a></p>
        </div>
    </header>
    
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Our most popular campgrounds</h3>
        </div>
    </div>
    
    
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    
        <% campgrounds.forEach((campground) => { %>
            <div class="col-sm-6 col-md-3">
                
                <div class="thumbnail">
                    <img src="<%= campground.image %>">
                </div>
                <div class="caption">
                    <h4><%= campground.name %></h4>
                </div>
                <p>
                    <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">More Info</a>
                </p>
            </div>
             
        <% }); %>
            
    </div>

</div>

<% include ../partials/footer.ejs %>